{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "pretty": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["*"],
      "@lib/*": ["src/lib/*"],
      "@mixins/*": ["src/mixins/*"],
      "@utils/*": ["src/utils/*"],
      "@public/*": ["src/public/*"],
      "@accounts/*": ["src/services/accounts/*"],
      "@sessions/*": ["src/services/sessions/*"],
      "@posts/*": ["src/services/posts/*"],
      "@comments/*": ["src/services/comments/*"],
      "@votes/*": ["src/services/votes/*"],
      "@communities/*": ["src/services/communities/*"],
      "@awards": ["src/services/awards/*"],
      "@threads/*": ["src/services/threads/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules/**/*", "test/**/*", ".commitlintrc.ts"],
  "preset": "ts-jest"
}
