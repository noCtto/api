{
  "env": {
    "node": true,
    "browser": false,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id", "_get", "_find", "_create", "_update"] }],
    "prettier/prettier": [
      2,
      {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 2
      }
    ]
  },
  "globals": { "_": true, "isNaN": true }
}
