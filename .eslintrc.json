{
  "env": {
    "node": true,
    "browser": false,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id", "_get", "_find", "_create", "_update"] }],
    "prettier/prettier": [
      2,
      {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 2
      }
    ],
    "no-console": "off",
    "no-param-reassign": "off",
    "no-prototype-builtins": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off",
    "no-plusplus": "off",
    "no-continue": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "no-shadow": "off",
    "no-useless-escape": "off",
    "no-useless-constructor": "off",
    "no-useless-return": "off",
    "no-useless-catch": "off",
    "no-useless-computed-key": "off",
    "no-useless-concat": "off",
    "no-useless-rename": "off",
    "no-useless-call": "off"
  },
  "globals": { "_": true, "isNaN": true }
}
